{
    "manifest_version": 3,
    "name": "YouTube Timer",
    "version": "1.0.0",
    "description": "Manage your YouTube watching time with customizable timers",
    "permissions": ["storage", "tabs", "activeTab"],
    "host_permissions": ["*://*.youtube.com/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["*.js", "*.css"],
      "matches": ["*://*.youtube.com/*"]
    }]
  }